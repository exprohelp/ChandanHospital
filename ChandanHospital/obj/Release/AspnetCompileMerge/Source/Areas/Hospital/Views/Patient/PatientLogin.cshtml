
@{
	ViewBag.Title = "PatientLogin";
	Layout = "~/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Hospital/JsModule/Patient/PatientLogin.js"></script>
<style>
	.Inactive {
		pointer-events: none;
		opacity: 0.5;
	}
	#lblMsg{
		text-align:center;
		opacity:unset;
	}
</style>
<section class="inner-header divider parallax layer-overlay overlay-white-5" style="background-image: url(&quot;/Content/images/bg/b1.jpg&quot;), url(&quot;/Content/images/bg/b1.jpg&quot;); background-position: 50% 79px;">
	<div class="container pt-40 pb-20">
		<!-- Section Content -->
		<div class="section-content">
			<div class="row">
				<div class="col-md-12 text-center">
					@*<h2 class="title" id="hPageHeading">Patient Login</h2>*@
				</div>
			</div>
		</div>
	</div>
</section>
<section>
	<div class="container">
		<div class="section-content">
			<div class="row">
				<input type="text" id="hidgetotp" style="display:none" />
				<div class="col-md-4 col-md-offset-4">
					<div class="shadow" id="tblContactUs">
						<div class="cont_name" style="text-align: center;"><b>My Report</b></div>
						<div class="contactbox" style="height: auto;padding: 5px;">
							<div class="col-md-12  form-group" id="CredentialSetion" style="margin: 0;">
								<div style="display:flex">
									<input type="text" id="txtMobileNo" maxlength="10" class="form-control" style="border: 1px solid #0ab1b9;" placeholder="Enter Your Mobile No" autocomplete="off">
									<button id="btnSendOTP" onclick="GetOtp()" style="width:33%;border-radius: 0;background:#0ab1b9" class="btn btn-success"><i class="fa fa-sign-in">&nbsp;</i>Submit</button>
								</div>
								<div style="display:grid">
									<label id="lblMsg"></label>
								</div>
								</div>
								<div class="col-md-12 Inactive" id="OTPSection" style="display:flex;">
									<input type="text" id="txtOTP" class="form-control" style="border: 1px solid #0ab1b9;" placeholder="Enter OTP" autocomplete="off">
									<button id="btnVerifyOTP" onclick="verifyOtp()" style="width:33%;border-radius: 0;background:#0ab1b9" class="btn btn-success">Verify OTP</button>
								</div>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
